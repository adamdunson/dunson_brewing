.header
  %h1 Showing beer
  = link_to 'edit', edit_admin_beer_path(@beer)

%p
  %dt Name:
  %dd= @beer.name

  %dt Beer style:
  %dd= @beer.style ? link_to(@beer.style, [:admin, @beer.style]) : Beer.default_style

  %dt Description:
  %dd!= markdown @beer.description

  %dt Recipe:
  %dd!= markdown @beer.recipe

  %dt Brew Date:
  %dd= @beer.brew_date
