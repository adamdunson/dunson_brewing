%h1 Listing users

= link_to 'New User', new_admin_user_path
= paginate @users
%table.index
  %tr
    %th ID
    %th Email
    %th First name
    %th Last name
    %th Display name
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.id
      %td= user.email
      %td= user.first_name
      %td= user.last_name
      %td= user.display_name
      %td= link_to 'Show', [:admin, user]
      %td= link_to 'Edit', edit_admin_user_path(user)
      - if current_user == user
        %td.disabled Destroy
      -else
        %td= link_to 'Destroy', [:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }
