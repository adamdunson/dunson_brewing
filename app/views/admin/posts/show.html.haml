%h1 Showing post

%table.show-table
  %tr
    %td Title:
    %td= @post.title
  %tr
    %td Body:
    %td= @post.body
  %tr
    %td Author:
    %td= link_to @post.author, admin_user_path(@post.author)
  %tr
    %td Created at:
    %td= @post.created_at
  %tr
    %td Updated at:
    %td= @post.updated_at

= link_to 'Edit', edit_admin_post_path(@post)
\|
= link_to 'Back', admin_posts_path
